<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
  <menu id="root-menu" label="OpenBox 3">
    <item label="Firefox">
      <action name="Execute">
        <execute>firefox</execute>
      </action>
    </item>
    <item label="File Manager">
      <action name="Execute">
        <execute>pcmanfm</execute>
      </action>
    </item>
    <item label="Emacs">
      <action name="Execute">
        <execute>emacsclient -nc</execute>
      </action>
    </item>
    <item label="urxvt">
      <action name="Execute">
        <execute>urxvt</execute>
      </action>
    </item>
    <item label="Discord">
      <action name="Execute">
        <execute>discord</execute>
      </action>
    </item>
    <item label="KeePassXC">
      <action name="Execute">
        <execute>keepassxc</execute>
      </action>
    </item>
    <item label="Dropbox">
      <action name="Execute">
        <execute>dropbox</execute>
      </action>
    </item>
    <separator />
    <menu id="25" label="Games">
      <item label="DOSBox-X">
        <action name="Execute">
          <execute>dosbox-x</execute>
        </action>
      </item>
      <item label="Retroarch">
        <action name="Execute">
          <execute>retroarch</execute>
        </action>
      </item>
      <item label="Steam">
        <action name="Execute">
          <execute>steam</execute>
        </action>
      </item>
      <separator />
      <item label="Wine: Arcanum">
        <action name="Execute">
          <execute>sh ~/Scripts/run-arcanum.sh</execute>
        </action>
      </item>
    </menu>
    <separator />
    <item label="ALSA mixer">
      <action name="Execute">
        <execute>xterm -e alsamixer</execute>
      </action>
    </item>
    <item label="GIMP">
      <action name="Execute">
        <execute>gimp</execute>
      </action>
    </item>
    <item label="Grafx2">
      <action name="Execute">
        <execute>grafx2</execute>
      </action>
    </item>
    <separator />
    <menu id="30" label="Settings">
      <item label="Monitor: Use Main">
        <action name="Execute">
          <execute>sh ~/Scripts/monitor-main.sh</execute>
        </action>
      </item>
      <item label="Monitor: Use TV">
        <action name="Execute">
          <execute>sh ~/Scripts/monitor-tv.sh</execute>
        </action>
      </item>
      <item label="Monitor: Use Retro">
        <action name="Execute">
          <execute>sh ~/Scripts/monitor-retro.sh</execute>
        </action>
      </item>
      <separator />
      <item label="Reconfigure Openbox">
        <action name="Reconfigure" />
      </item>
      <separator />
      <item label="Openbox Config">
        <action name="Execute">
          <execute>obconf</execute>
        </action>
      </item>
      <item label="Desktop Settings">
        <action name="Execute">
          <execute>lxappearance</execute>
        </action>
      </item>
      <item label="Tint2 Config">
        <action name="Execute">
          <execute>tint2conf</execute>
        </action>
      </item>
    </menu>
    <separator />
    <menu id="40" label="System">
      <!-- <menu id="client-list-menu"/> -->
      <!-- <separator/> -->
      <item label="Logout">
        <action name="Exit" />
      </item>
      <item label="Reboot">
        <action name="Execute">
          <prompt>
		    Are you sure you want to reboot?
		</prompt>
          <execute>sudo shutdown -r now</execute>
        </action>
      </item>
      <item label="Shutdown">
        <action name="Execute">
          <prompt>
		    Are you sure you want to reboot?
		</prompt>
          <execute>sudo shutdown -h now</execute>
        </action>
      </item>
    </menu>
  </menu>
</openbox_menu>
